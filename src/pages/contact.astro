---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact Us">
  <section class="section">
    <div class="container is-max-widescreen">
      <h1 class="title">Contact Us</h1>
      <h2 class="subtitle">
        Send us a message or schedule a <strong>free</strong> consultation
      </h2>

      <div class="columns">
        <div class="column">
          <form name="contact" netlify>
            <div class="field">
              <label for="name" class="label"
                >Name <span class="has-text-danger">*</span>
              </label>
              <div class="control">
                <input
                  id="name"
                  name="name"
                  class="input"
                  type="text"
                  placeholder="Your name"
                  required
                />
              </div>
            </div>

            <div class="field">
              <label for="phone" class="label">Phone</label>
              <div class="control">
                <input
                  id="phone"
                  name="phone"
                  class="input"
                  type="tel"
                  placeholder="The best phone number to reach you"
                />
              </div>
            </div>

            <div class="field">
              <label for="email" class="label"
                >Email <span class="has-text-danger">*</span>
              </label>
              <div class="control">
                <input
                  id="email"
                  name="email"
                  class="input"
                  type="email"
                  placeholder="The best email to reach you"
                  required
                />
              </div>
            </div>

            <div class="field">
              <label for="message" class="label"
                >Message <span class="has-text-danger">*</span>
              </label>
              <div class="control">
                <textarea
                  id="message"
                  name="message"
                  class="textarea"
                  placeholder="Are there particular services you are interested in? Or would you just like to schedule a call to learn more for no charge? Feel free to give us as much or as little detail as desired."
                  required></textarea>
              </div>
            </div>

            <button class="button is-primary is-fullwidth" type="submit"
              >Send Message</button
            >
          </form>
        </div>
        <div class="column">
          <!-- Calendly inline widget begin -->
          <div
            class="calendly-inline-widget"
            data-url="https://calendly.com/matrangadev?hide_landing_page_details=1"
            style="min-width:320px;height:630px;"
          >
          </div>
          <script
            type="text/javascript"
            src="https://assets.calendly.com/assets/external/widget.js"
            async
          ></script>
          <!-- Calendly inline widget end -->
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .note {
    position: sticky;
    top: 2rem;
  }
</style>
